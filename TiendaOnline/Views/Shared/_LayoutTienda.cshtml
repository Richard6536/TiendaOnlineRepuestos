<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">

    <!-- Table responsive -->
    <link href="~/Content/Tables/responsive-table.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/6e60627bfa.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</head>
<body style="background-color: rgba(32, 92, 137, 0.08) !important;">
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-right text-white" id="sidebar-wrapper" style="background-color:#205c89">
            <div class="sidebar-heading">@Session["TiendaNombre"] </div>
            <div class="list-group list-group-flush">
                <a href="~/Usuarios/ListaUsuarios" class="list-group-item list-group-item-action bg-light">Usuarios</a>
                <a href="~/SolicitudCotizacion/ListaSolicitudesCotizaciones" class="list-group-item list-group-item-action bg-light">Solicitudes Cotizaciones</a>
                <a href="~/Cotizacion/ListarCotizaciones" class="list-group-item list-group-item-action bg-light">Cotizaciones</a>
                <a href="~/Producto/ListaProductos" class="list-group-item list-group-item-action bg-light">Productos</a>
                <a href="~/Servicio/ListaServicios" class="list-group-item list-group-item-action bg-light">Servicios</a>
                <a href="~/Schedule/CalendarioTienda" class="list-group-item list-group-item-action bg-light">Calendario</a>
                <a href="~/Ajustes/Index" class="list-group-item list-group-item-action bg-light">Ajustes</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar text-white navbar-expand-lg border-bottom" style="background-color:#205c89">
                <button class="btn btn-primary" style="height:35px" id="menu-toggle"><i class="material-icons">toc</i></button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="text-center" style="width:100%; font-size:20px">@Session["TITULO"]</div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link text-white" href="~/">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid" style="padding:15px">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    @RenderSection("scripts", required: false)
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Referencias para usar paginación en tablas -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/af-2.3.0/b-1.5.2/b-colvis-1.5.2/b-flash-1.5.2/b-html5-1.5.2/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.4.0/r-2.2.2/rg-1.0.3/rr-1.2.4/sc-1.5.0/sl-1.2.6/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/af-2.3.0/b-1.5.2/b-colvis-1.5.2/b-flash-1.5.2/b-html5-1.5.2/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.4.0/r-2.2.2/rg-1.0.3/rr-1.2.4/sc-1.5.0/sl-1.2.6/datatables.min.js"></script>

    <style>
        /*SIDEBAR*/
        .bg-light {
            background-color: #205c89!important;
        }

        .list-group-item-action {
            color: #f8f6f6;
        }
    </style>

    <style>
        /*CARDS, TEXT-CARDS*/
        .bg-card-color {
            background-color: #205c89!important;
            color:#f8f6f6;
        }
        .bg-card-text {
            color:#205c89;
        }
       .bg-card-border-color {
            border: 1.5px solid #205c89;
        }
        
       .bg-breadcrumb-color {
            background-color: rgba(32, 92, 137, 0.69);
        }
    </style>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
