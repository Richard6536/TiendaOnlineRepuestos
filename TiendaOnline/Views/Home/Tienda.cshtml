@model TiendaOnline.Models.Tienda

@{
    ViewBag.Title = "Tienda";
}
<div class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="http://www.bates.edu/wordpress/files/2016/07/color-gray1.jpg" alt="Chania">
            <div class="carousel-caption">
                <div class="col-xs-6 col-md-3 col-md-offset-4">
                    <a href="#" class="thumbnail">
                        <img src="http://cdn.onlinewebfonts.com/svg/img_440180.png" alt="...">
                    </a>
                    <h3>@Model.Nombre</h3>
                </div>

            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    @foreach (var item in Model.Productos)
    {
        <a href="@Url.Action("VerProducto", "Productos", new { id = item.Id })">
            <div class="col-sm-5 col-md-3">
                <div class="thumbnail">
                    @if (item.Imagenes.Count > 0)
                {
                        <img style="object-fit: contain; height:200px" src="@Url.Content("~/ImagenesUsers/" + item.Tienda.Id + "/Productos/" + System.IO.Path.GetFileName(item.Imagenes.First().DireccionImagen))" alt="...">
                    }
                    <hr />
                    <div class="caption">
                        <p style="color:#44b61d"><strong>$@Decimal.Parse(item.Precio.ToString(), System.Globalization.NumberStyles.Float)</strong></p>
                        <p><strong>@item.Nombre</strong></p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>   

<script>
    //Esconder Carousel en esta vista
    document.getElementById("myCarousel").style.display = "none";
</script>