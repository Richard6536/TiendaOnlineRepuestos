@model TiendaOnline.Clases.Busqueda

@{
    ViewBag.Title = "Search";
}
<!-- HOJAS DE DISEÑO -->
<link rel="stylesheet" href="~/Content/Tienda/tienda-inicio.css" />
<div style="margin:10px">
    <h2>Busqueda: @Model.BusquedaText</h2>

    @if (Model.Productos != null && Model.Productos.Count() > 0)
    {
        <br />
        <div class="card card-header-product">
            <div class="card-body card-pagination">
                <div class="align-items-end d-flex justify-content-end">
                    <div style="width:50%; margin-left:10px">
                        <h3>Repuestos</h3>
                    </div>
                    <div class="align-items-end d-flex justify-content-end" style="width:50%">
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("_PartialProducts", "Tienda", new { viewProductType = TiendaOnline.Clases.TiendaHome.ViewProductType.Grid, productos = Model.Productos });
    }

    @if (Model.Servicios != null && Model.Servicios.Count() > 0)
    {
        <br />
        <div class="card card-header-product">
            <div class="card-body card-pagination">
                <div class="align-items-end d-flex justify-content-end">
                    <div style="width:50%; margin-left:10px">
                        <h3>Servicios</h3>
                    </div>
                    <div class="align-items-end d-flex justify-content-end" style="width:50%">
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("_PartialServices", "Tienda", new { viewProductType = TiendaOnline.Clases.TiendaHome.ViewProductType.Grid, servicios = Model.Servicios });
    }
    @if (Model.Tiendas != null && Model.Tiendas.Count() > 0)
    {
        <br />
        <div class="card card-header-product">
            <div class="card-body card-pagination">
                <div class="align-items-end d-flex justify-content-end">
                    <div style="width:50%; margin-left:10px">
                        <h3>Tiendas</h3>
                    </div>
                    <div class="align-items-end d-flex justify-content-end" style="width:50%">
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("_PartialTiendas", "Tienda", new { viewProductType = TiendaOnline.Clases.TiendaHome.ViewProductType.Grid, tiendas = Model.Tiendas });
    }

</div>
