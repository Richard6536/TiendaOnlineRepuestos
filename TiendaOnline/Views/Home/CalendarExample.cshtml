
<link href='~/Content/Calendar/main.css' rel='stylesheet' />
<script src='~/Content/Calendar/main.js'></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
                var calendarEl = document.getElementById('calendar');
                var draggableEl = document.getElementById('draggableCal');

                //dayGridWeek, dayGridMonth, listWeek
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'timeGridWeek',
                    editable: true,
                    droppable: true,
                    selectable: true,
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                    },
                    buttonText: {
                        today: 'Hoy',
                        month: 'Mes',
                        week: 'Semana',
                        day: 'Día',
                        list: 'Lista'
                    }
                });

                calendar.on('dateClick', function (info) {
                    alert('clicked on ' + info.dateStr);
                });

                calendar.setOption('locale', 'Es');

                 calendar.render();

                //Add event
                calendar.batchRendering(function () {
                    calendar.addEvent({ title: 'new event', start: '2020-09-03' });
                });
    });
</script>

<div style="padding:20px">
    <div class="row">
        <div style="background-color:coral; width:20%; padding:10px">
            <div class='fc-event' draggable="true" data-color='#50C1E9' data-starttime="08:00" data-endtime="17:00">Event From 8am till 5 pm</div>
        </div>
        <div id='calendar' style="width:80%; padding:10px"></div>
    </div>

</div>
