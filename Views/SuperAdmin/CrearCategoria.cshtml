@model TiendaOnline.Models.Categoria

@{
    ViewBag.Title = "CrearCategoria";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

@using (Html.BeginForm()) 
{
   @Html.AntiForgeryToken()
    <div class="card my-4">
        <h5 class="card-header">Crear Categoria</h5>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="container">
                <div class="row">
                    <div class="form-group col-xs-6" style="margin-right:15px">
                        @Html.Label("Nombre Categoria", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}
